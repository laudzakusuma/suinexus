{
  "name": "suinexus",
  "version": "1.0.0",
  "description": "Blockchain-powered supply chain tracking platform on Sui",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "npm run dev --workspace=backend",
    "dev:frontend": "npm run dev --workspace=frontend",
    "build": "npm run build --workspaces",
    "build:backend": "npm run build --workspace=backend",
    "build:frontend": "npm run build --workspace=frontend",
    "start": "npm run start --workspace=backend",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "clean": "npm run clean --workspaces && rm -rf node_modules",
    "setup": "npm install && npm run setup --workspaces",
    "deploy:contract": "cd packages/contract && sui client publish --gas-budget 100000000"
  },
  "devDependencies": {
    "@types/node": "^20.19.19",
    "@vercel/node": "^5.3.24",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/suinexus.git"
  },
  "keywords": [
    "blockchain",
    "supply-chain",
    "sui",
    "tracking",
    "nft",
    "traceability"
  ],
  "author": "Your Name",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yourusername/suinexus/issues"
  },
  "homepage": "https://github.com/yourusername/suinexus#readme",
  "dependencies": {
    "@mysten/sui": "^1.39.0"
  }
}
